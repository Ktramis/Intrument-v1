{% extends 'base.html.twig' %}

{% block title %}Nos produit{% endblock %}


{% block content %}

  
   <div class="cont">
    <div class="col-md-3">
     
        <h4>Filtre votre recherche</h4>
        {{form(form)}}
    </div>



    <div class="produits col-md-9">
        {% for produit in produits %}
           
                <div class="container py-5 ">
                    <div class="row justify-content-center">
                    <div class="">
                        <div class="card text-black">
                        <a href= "{{path('produit',{'slug':produit.slug}) }}" class="prod">
                        <img src="/uploads/{{produit.illustration}}"
                            class="card-img-top ima_produit " alt="Apple Computer" />
                        </a>
                        <div class="card-body">
                            <div class="text-center">
                            <h5 class="card-title">{{produit.name}}</h5>
                            <p class="text-muted mb-4">{{produit.subtitle}}</p>
                            </div>
                            <div>
                            <hr>
                            <div class="d-flex justify-content-between">
                                <span>Prix</span><span>{{(produit.price / 100)| number_format(2,'.')}}€</span>
                            </div>
                            </div>
                        
                        </div>
                        </div>
                    </div>
                    </div>
                </div>
            
        
        {% endfor %}
    </div>

</div>

{% endblock %}
